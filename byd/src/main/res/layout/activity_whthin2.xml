<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.Whthin2Activity">

    <include layout="@layout/headset" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="不动产登记查档证明"
            android:textColor="#505050"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="152px"
            android:layout_height="152px"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:src="@drawable/twoer" />

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="      经查档案，截止2019年5月11日13:45分，查询赵章（320827198909233029）共 1 人名下的不动产登记情况如下："
            android:textColor="#505050"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/zl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="无不动产登记信息及签约备案信息。"
            android:textColor="#505050"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:text="滨州市不动产登记中心"
            android:textColor="#505050"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="15dp"
            android:text="2019年5月11日"
            android:textColor="#505050"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/fan"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_margin="35dp"
        android:background="@drawable/blue_shape"
        android:gravity="center"
        android:text="返回"
        android:textColor="#ffffff"
        android:textSize="16sp" />
</LinearLayout>

