<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".activity.InspectionActivity">

    <include layout="@layout/headset" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查询条件"
                    android:textColor="#505050"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/searched"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="房源核验编号/不动产权证号"
                        android:inputType="text"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></Spinner>
                    <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="54px"-->
                    <!--android:text=" 房源核验"-->
                    <!--android:textColor="#2a82e4"-->
                    <!--android:textSize="14sp" />-->
                </LinearLayout>

                <View
                    android:layout_width="230dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:background="#64999999" />

            </LinearLayout>

            <TextView
                android:id="@+id/startserarch"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_margin="25dp"
                android:background="@drawable/green_shape"
                android:gravity="center"
                android:text="开始查询"
                android:textColor="#fff"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/searchlayout"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15dp"
                android:background="#fff"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="查询结果"
                    android:textColor="#505050"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="1dp"
                        android:background="#fff"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:text="不动产单元号/房屋编号"
                        android:textColor="#505050"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/bdcdyh"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:text=" "
                        android:textColor="#505050"
                        android:textSize="13sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:background="#fff"
                        android:paddingLeft="10dp"
                        android:paddingTop="15dp"
                        android:text="不动产权证号"
                        android:textColor="#505050"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/bdczh"
                        android:layout_width="0dp"

                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:text=" "
                        android:textColor="#505050"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:background="#fff"
                        android:paddingLeft="10dp"
                        android:paddingTop="15dp"
                        android:text="权利类型"
                        android:textColor="#505050"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/qllx"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:text=" "
                        android:textColor="#505050"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="1dp"
                        android:background="#fff"
                        android:paddingLeft="10dp"
                        android:paddingTop="15dp"
                        android:text="权利人"
                        android:textColor="#505050"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/qlr"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:paddingLeft="10dp"
                        android:paddingTop="15dp"
                        android:text=" "
                        android:textColor="#505050"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="1dp"
                        android:background="#fff"
                        android:paddingLeft="10dp"
                        android:paddingTop="15dp"
                        android:text="权利面积"
                        android:textColor="#505050"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/qlmj"
                        android:layout_width="0dp"

                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:paddingLeft="10dp"
                        android:paddingTop="15dp"
                        android:text=""
                        android:textColor="#505050"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="1dp"
                        android:background="#fff"
                        android:paddingLeft="10dp"
                        android:paddingTop="15dp"
                        android:text="坐落"
                        android:textColor="#505050"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/zl"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:text=" "
                        android:textColor="#505050"
                        android:textSize="13sp" />

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/quit"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_margin="25dp"
                android:background="#2a82e4"
                android:gravity="center"
                android:text="返回"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>