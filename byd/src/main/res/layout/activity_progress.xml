<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical"
    tools:context=".activity.ProgressActivity">

    <include layout="@layout/headset" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="15dp"
        android:background="#fff"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/personage"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_group_add" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="  个人查询"
                android:textSize="15sp" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:background="#a6a6a6" />

        <LinearLayout
            android:id="@+id/unit"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_receipt_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="单位查询"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:paddingBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#fff"
        android:orientation="vertical"
        android:paddingLeft="35dp"
        android:paddingRight="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/bnum"
                android:textSize="13sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:singleLine="true"
                android:inputType="number"

                android:background="@android:color/transparent"
                android:hint="受理编号（10－17位数字）"
                android:padding="10dp"
                  />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#64999999" />


            <EditText
                android:id="@+id/personage2"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:singleLine="true"

                android:background="@android:color/transparent"
                android:hint="权利人身份证后4位"
                android:padding="10dp"
                  />

            <EditText
                android:id="@+id/unit2"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:singleLine="true"

                android:background="@android:color/transparent"
                android:hint="单位名称全称"
                android:padding="10dp"
                  />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#64999999" />
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_margin="35dp"
        android:background="@drawable/green_shape"
        android:gravity="center"
        android:text="开始查询"
        android:textColor="#fff"
        android:textSize="16sp" />
</LinearLayout>