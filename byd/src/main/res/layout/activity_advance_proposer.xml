<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".activity.advance.AdvanceProposerActivity">

    <include layout="@layout/headset" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:background="#f2f2f2"

        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="买方信息"
                        android:textColor="#505050"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="2dp"
                        android:src="@drawable/add" />

                    <TextView
                        android:id="@+id/addsell"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="15dp"
                        android:text="添加"
                        android:textColor="#2a82e4"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="#64999999" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="105dp"></android.support.v7.widget.RecyclerView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="义务人"
                    android:textColor="#ababab"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="临邑顾家置业有限公司" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="-8dp"
                    android:text="91371424057929830C"
                    android:textSize="10sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="成交总价（元）"
                    android:textColor="#505050"
                    android:textSize="14sp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="#64999999" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp">


                    <EditText
                        android:textSize="13sp"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:background="@drawable/addshape"
                        android:paddingLeft="8dp"

                        android:text="851,000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="大写：捌拾伍万壹仟圆" />

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/blue_shape"
                android:gravity="center"
                android:text="保存"
                android:textColor="#fff"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="#fff"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="不动产信息"
                    android:textColor="#505050"
                    android:textSize="14sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="1dp"
                        android:background="#fff"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:text="不动产单元号/房屋编号"
                        android:textColor="#505050"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/bdcdyh"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:text="450104005004GB00342F00100025"
                        android:textColor="#505050"
                        android:textSize="13sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:background="#fff"
                        android:paddingLeft="10dp"
                        android:paddingTop="15dp"
                        android:text="不动产权证号"
                        android:textColor="#505050"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/bdczh"
                        android:layout_width="0dp"

                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:text="桂（2018）南宁市不动产权第0030301号"
                        android:textColor="#505050"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:background="#fff"
                        android:paddingLeft="10dp"
                        android:paddingTop="15dp"
                        android:text="权利类型"
                        android:textColor="#505050"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/qllx"
                        android:layout_width="0dp"

                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:text="国有建设用地使用权第00300301号"
                        android:textColor="#505050"
                        android:textSize="13sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="1dp"
                        android:background="#fff"
                        android:paddingLeft="10dp"
                        android:paddingTop="15dp"
                        android:text="登记类型"
                        android:textColor="#505050"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/qlr"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:paddingLeft="10dp"
                        android:paddingTop="15dp"
                        android:text="转移登记"
                        android:textColor="#505050"
                        android:textSize="13sp" />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>